@{
    ViewBag.Title = "Index";
}

@using Restaurant.Data;
@model Class_7_3_Restaurant.Models.HomeViewModel
<a href="/home/categories" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span>Back To Categories</a>
<br />
<br />
<a href="/home/shoppingcart" class="btn btn-danger">See Cart</a>
<br />
<br />
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Name</th>
    </tr>
    @foreach (MenuItem item in Model.MenuItems)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <button class="btn btn-danger add-to-cart-button" data-id="@item.Id">Add To Cart</button>
            </td>
        </tr>
    }
</table>

@section scripts
{
    <script src="~/Scripts/Index.js"></script>
}

