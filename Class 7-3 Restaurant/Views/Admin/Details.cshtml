@{
    ViewBag.Title = "Details";
}

@using Restaurant.Data;
@model Class_7_3_Restaurant.Models.DetailsViewModel

<h1 style="text-align:center;">Order Number @Model.OrderId</h1>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
    </tr>
    @foreach (MenuItemWithQuantity item in Model.MenuItems)
    {
        <tr>
            <td>@item.MenuItem.Name</td>
            <td>@item.Quantity</td>
        </tr>
    }
</table>

<button class="btn btn-success" id="mark-delivered" data-order-id="@Model.OrderId">Mark As Delivered</button>

@section scripts
{
    <script src="~/Scripts/jquery.signalR-1.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/SignalR.js"></script>
    <script src="~/Scripts/AdminIndex.js"></script>
}

